{
	"defaultFormName": "default",
	"content": [
		{
			"ctl": "title",
			"level": 1,
			"name":"title",
			"text": "My Profile"
		},
		{
			"row": true,
			"ctl": "radiolist",
			"name": "hatsize",
			"onChange": {
				"run": "showif",
				"item": "large-hat-info",
				"fields": "topic,track",
				"value": "large"
			},
			"label": "Hat Size",
			"list": "Small|small,Medium|medium,Large|large",
			"req": true
		},
		{
			"ctl": "title",
			"level": 4,
			"name":"large-hat-info",
			"text": "This is a really large hat!",
			"hidden": true
		},
		{
			"ctl": "fieldrow",
			"name":"options-row",
			"items": [
				{
					"ctl": "dropdown",
					"name": "topic",
					"label": "Main Topic",
					"list": "Work,Play,Both",
					"req": true
				},
				{
					"ctl": "dropdown",
					"name": "track",
					"label": "Track",
					"list": "Business,Technical",
					"req": true
				}
			]
		},
		{
			"ctl": "fieldrow",
			"label": "Your Name",
			"req": true,
			"items": [
				{
					"placeholder": "First Name",
					"name": "first",
					"onValidate": {
						"run": "minlen",
						"min": 5
					},
					"req": true
				},
				{
					"placeholder": "Last Name",
					"name": "last",
					"onValidate": {
						"run": "minlen",
						"min": 5
					}
				}
			]
		},
		{
			"name": "comments",
			"label": "Comments",
			"placeholder": "Enter a bunch of details",
			"ctl": "textarea",
			"rows": 2,
			"req": true
		}
	]
}